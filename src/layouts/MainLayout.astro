---
import MysticalBackground from '../components/phase2/MysticalBackground.tsx';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Bunny God - Divine Philosophical Wisdom",
  description = "Ask the all-powerful Bunny God any philosophical question and receive answers backed by academic literature from PhilPapers.org"
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/og-image.png" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/og-image.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <title>{title}</title>

    <!-- Cloudflare Web Analytics -->
    <script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "7761a10c40e14d50b0ba733dd6a3b0cb"}'></script>
    <!-- End Cloudflare Web Analytics -->
  </head>
  <body>
    <div class="relative min-h-screen overflow-hidden">
      <!-- Enhanced mystical background with particles -->
      <MysticalBackground client:load />

      <!-- Main content -->
      <main class="relative z-10">
        <slot />
      </main>

      <!-- Footer -->
      <footer class="relative z-10 mt-auto py-8 text-center text-cosmic-300/60 text-sm">
        <p>Built by üê∞</p>
        <p class="mt-2">Powered by PhilPapers.org & Cloudflare Workers AI</p>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
